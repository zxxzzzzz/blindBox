{
  "compilerOptions": {
    "outDir": "./server",
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "lib": ["DOM"],
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "./src/server",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src/server"
  ]
}
